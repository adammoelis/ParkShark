<% content_for :page_header do %>Nearby Parking Spots<% end %>
	<% content_for :page_subheader do %>Browse nearby parking spots below or enter a new location<% end %>
<% content_for :page_content do %>
	<%= render @spots %>
<% end %>
<% content_for :searching do %>
	<%= render 'spots/spots_search' %>
<% end %>
<% content_for :filtering do %>
	<%= render 'search/search_filters' %>
<% end %>
<% content_for :location_search do %>
	<br>
	<%= render 'layouts/search_location_button' %>
	<div class="col-md-3 inner-bottom-xs center-block" id="location-search-nearby">
		<%= render 'search/search_location' %>
	</div>
<% end %>
<% content_for :sorting do %>
	<%= render 'spots/sort' %>
<% end %>
<%= render 'layouts/spots_layout' %>
