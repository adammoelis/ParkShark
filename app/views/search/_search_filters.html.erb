<div class="col-md-5 col-sm-9 center-block text-center">
  <%= form_tag(nearby_spots_path, method: "get") do %>
    <div class="form-group">
      <%= label_tag :beginning_time, "Start Time" %>
      <% if params[:listing] && params[:listing]["beginning_time(1i)"] %>
        <%= datetime_select("listing", "beginning_time", default: parse_time('beginning_time')) %>
      <% else %>
        <%= datetime_select("listing", "beginning_time", default: Time.now) %>
      <% end %>
    </div>
    <div class="form-group">
      <%= label_tag :ending_time, "End Time" %>
      <% if params[:listing] && params[:listing]["beginning_time(1i)"] %>
        <%= datetime_select("listing", "ending_time", default: parse_time('ending_time')) %>
      <% else %>
        <%= datetime_select("listing", "ending_time", default: 1.hour.from_now) %>
      <% end %>
    </div>
    <div class="form-group">
      <% if params[:price] %>
      <%= text_field_tag("price", params[:price]) %>
      <% else %>
        <%= text_field_tag("price", nil, placeholder: "Max Price", class: 'form-control') %>
      <% end %>
    </div>
    <%= hidden_field_tag "q", "#{params[:q]}" if params[:q] %>
    <%= hidden_field_tag "radius", "#{params[:radius]}" if params[:radius] %>
    <%= hidden_field_tag "sort_type", "#{params[:sort_type]}" if params[:sort_type] %>
    <div class="form-group">
      <%= submit_tag("Find Parking", class: "btn btn-large" ) %>
    </div>
  <% end %>
</div>
