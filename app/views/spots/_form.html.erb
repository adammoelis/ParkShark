<h2>List your parking spot</h2>
<%= form_for @spot, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <div class="form-group">
      <%= f.label :pictures, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.file_field :pictures, type: :file, multiple: true, name: "pictures[]" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :title, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
      <%= f.text_field :title, :placeholder => 'Title of listing' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :address, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
      <%= f.text_field :address, :placeholder => '123 Parking LN' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :city, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
      <%= f.text_field :city, :placeholder => 'New York' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :state, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
      <%= select_tag 'spot[state]', options_for_select(us_states) %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :zip_code, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
      <%= f.text_field :zip_code, :placeholder => '10001' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :beginning_time, 'Start Time', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.datetime_select :beginning_time, class: 'form-control', name: 'spot[beginning_time]'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ending_time, 'End Time', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.datetime_select :ending_time, class: 'form-control', name: 'spot[ending_time]'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, 'Price ($)', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
        <%= f.text_field :price, :placeholder => '$20' %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :description, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_area :description, class: 'form-control', :placeholder => "Share some things about your spot" %>
      </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="spot_Submit"></label>
    <div class="col-sm-6">
      <%= f.submit class: 'btn btn-default', id: 'create-spot' %>
    </div>
  </div>
<% end %>

<%= link_to "Back", root_path, class: 'btn btn-default' %>
