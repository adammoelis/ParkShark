<li class="item thumb <%= spot.class_type %>" id="spot-<%= spot.id %>">
  <figure>

    <div class="icon-overlay icn-link">
      <% if spot.pictures.exists? %>
        <a href=" <%= spot_path(spot) %>"><%= image_tag spot.pictures.first.picture.url(:medium) %></a>
      <% else %>
        <a href=" <%= spot_path(spot) %>"><%= image_tag "/images/medium/missing.jpg" %></a>
      <% end %>
    </div><!-- /.icon-overlay -->

    <figcaption class="bordered no-top-border">
      <div class="info">

        <h4> <%= link_to "#{spot.title}", spot_path(spot) %></h4>
        <p> <%= spot.city %>, <%= spot.state %></p>
        <%= button_to "Re-List Spot", nil, class: 'btn btn-small' if !spot.available && current_user == spot.owner %>
        <%= button_to 'Remove Spot', spot_path(spot), class: 'btn btn-small', method: :delete, data: { confirm: 'Are you sure?' } if current_user == spot.owner %>
      </div><!-- /.info -->
    </figcaption>

  </figure>
</li><!-- /.item -->
