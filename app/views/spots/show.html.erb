<main>

	<!-- ============================================================= SECTION – PORTFOLIO POST ============================================================= -->

	<section id="portfolio-post">
		<div class="container inner-top-md">
			<div class="row">

				<div class="col-md-8">
					<div id="owl-work" class="owl-carousel owl-inner-pagination owl-inner-nav owl-ui-md">

						<% @spot.pictures.each do |picture| %>
							<div class="item">
								<figure>
									<%= image_tag picture.picture.url(:medium) %>
								</figure>
							</div><!-- /.item -->
						<% end %>

					</div><!-- /.owl-carousel -->
				</div><!-- /.col -->

				<div class="col-md-4 inner-left-sm">
					<header>
						<h2><%= @spot.title %></h2>
						<p class="text-small"><%= @spot.description %></p>

						<ul class="item-details inner-top-xs outer-top-xs border-top">
							<li class="date"> <%= @spot.beginning_time.strftime("%B %d, %Y %I:%M %Z %p") %> - <%= @spot.ending_time.strftime("%B %d, %Y %I:%M %Z %p") %></li>
							<li class="categories"> <%= @spot.city %>, <%= @spot.state %></li>
							<li class="client"> <%= number_to_currency(@spot.price) %></li>
							<li class="url"><a href="http://demo.fuviz.com/reen">Zip Code: <%= @spot.zip_code %></a></li>
							<iframe id="map" width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_KEY'] %>&q=<%= @spot.full_address %>&maptype=satellite" allowfullscreen></iframe>
						</ul><!-- /.item-details -->

						<% if current_user.id == @spot.owner.id %>
							<%= link_to "Edit this spot", edit_spot_path(@spot), class: "btn btn-large" %>
							<%= link_to "Create a New Listing", new_spot_listing_path(@spot), class: "btn btn-large" %>
						<% end %>
					</header>
				</div><!-- /.col -->

			</div><!-- /.row -->
		</div><!-- /.container -->

	</section>

	<!-- ============================================================= SECTION – PORTFOLIO POST : END ============================================================= -->
	<!-- ============================================================= Listings SECTION ============================================================= -->
<div class="col-md-3">
	<ul>
		<h2>Occupied Listings</h2>
	<% @spot.listings.where(available: ['false', nil]).each do |listing| %>
		<%= render partial: 'listings/listing', locals: {spot: @spot, listing: listing} %>
	<% end %>
	</ul>
</div>

<div class="col-md-3">
	<ul>
		<h2>Available Listings</h2>
	<% @spot.listings.where(available: 'true').each do |listing| %>
		<%= render partial: 'listings/listing', locals: {spot: @spot, listing: listing} %>
	<% end %>
	</ul>
</div>
	<!-- ============================================================= REVIEWS SECTION ============================================================= -->

<div class="col-md-3">
	<ul>
		<h2>Review</h2>
		<% @spot.reviews.each do |review| %>
			<%= render partial: 'review', locals: {review: review} %>
		<% end %>
	</ul>

	<% if user_signed_in? && current_user %>
		<%= render partial: 'review_form' %>
	<% end %>
</div>

