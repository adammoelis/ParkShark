<% content_for :modal_header do %>Send Message<% end %>
<% content_for :modal_body do %>
  <%= render 'layouts/modal_flash' %>
<% end %>
$("#modal-window").html("<%= j render 'layouts/modal_layout' %>");

setTimeout(function(){
  // close modal window once request complete
  $(function(){
     $('#modal-window').modal('toggle');
  });
}, 1500);
