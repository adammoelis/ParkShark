<%= form_for @user, html: {class: 'form-horizontal', multipart: true} do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.file_field :avatar %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :gender, "Gender", class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.radio_button :gender, 'F' %> <%= f.label :gender, "Female" %>
          <%= f.radio_button :gender, 'M' %> <%= f.label :gender, "Male" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :birthday, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.date_select :birthday, start_year: 1920, end_year: 2000, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :location, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_field :location, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :phone, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.telephone_field :phone, class: 'form-control', :placeholder => "(123) 456-7890" %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
  </div>
<% end %>
