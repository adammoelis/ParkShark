<h2>Edit Profile</h2>

<%= form_for @user, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.file_field :avatar %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: 'form-control', :placeholder => 'Your first and last name' %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :gender, "Gender", class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.radio_button :gender, 'Female' %> <%= f.label :gender, "Female" %>
          <%= f.radio_button :gender, 'Male' %> <%= f.label :gender, "Male" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :birthday, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.date_select :birthday, start_year: 1920, end_year: 2000, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control', :placeholder => 'name@example.com'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :phone, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.telephone_field :phone, class: 'form-control', :placeholder => "(123) 456-7890" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :bio, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_area :bio, class: 'form-control', :placeholder => "Share a little bit about yourself" %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
  </div>
<% end %>

<h5>Cancel my account</h5>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default btn-xs' %></p>

<%= link_to "Back", user_path, class: 'btn btn-default btn-xs' %>
