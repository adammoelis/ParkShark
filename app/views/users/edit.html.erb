<h2>Edit Profile</h2>

<%= form_for @user, url: users_path, html: {class: 'form-horizontal', multipart: true} do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.file_field :avatar %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :gender, "Gender", class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.radio_button :gender, 'F' %> <%= f.label :gender, "Female" %>
          <%= f.radio_button :gender, 'M' %> <%= f.label :gender, "Male" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :birthday, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.date_select :birthday, start_year: 1920, end_year: 2000, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :location, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.text_field :location, class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :phone, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
          <%= f.telephone_field :phone, class: 'form-control', :placeholder => "(123) 456-7890" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :password, class: 'col-sm-2 control-label'  %><i>(leave blank if you don't want to change it)</i>
      <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :current_password, class: 'col-sm-2 control-label' %> <i>(we need your current password to confirm your changes)</i>
      <div class="col-sm-6">
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
  </div>
<% end %>

<h5>Cancel my account</h5>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default btn-xs' %></p>

<%= link_to "Back", user_path, class: 'btn btn-default btn-xs' %>
