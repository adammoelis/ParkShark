<%= form_for @user, url: { action: :update_purchase_information, method: :post }, html: {class: 'form-horizontal', multipart: true} do |f| %>

  <div class="form-group">
    <%= f.label :phone, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-9">
      <%= f.telephone_field :phone, class: 'form-control', :placeholder => "(123) 456-7890" %>
    </div>
  </div>

    <div class="form-group">
      <%= f.label :street_address, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-9">
        <%= f.text_field :street_address, class: 'form-control', :placeholder => "Street Address" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-9">
        <%= f.text_field :city, class: 'form-control', :placeholder => "City" %>
      </div>
    </div>
    <div class="form-group">
        <%= f.label :state, class: 'col-sm-2 control-label' %>
        <div class="col-sm-9">
        <%= select_tag 'user[state]', options_for_select(us_states_abbreviation) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :zip_code, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-9">
        <%= f.number_field :zip_code, class: 'form-control', :placeholder => "Zip Code" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :account_number, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-9">
        <%= f.number_field :account_number, class: 'form-control', :placeholder => "Account Number (will not be stored)" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :routing_number, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-9">
        <%= f.number_field :routing_number, class: 'form-control', :placeholder => "Routing Number (will not be stored)" %>
      </div>
    </div>
    <div id="dropin"></div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <div class="pull-right">
          <%= link_to "Back", :back, class: 'btn btn-default' %>
          <%= f.submit "Update Purchase Information", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>
