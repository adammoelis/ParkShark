<% if user != current_user %>
  <li class="item thumb interactive" id="user-<%= user.id %>">
    <figure>
      <div class="icon-overlay icn-link">
        <a href="<%= user_path(user) %>"><%= image_for_user(user, :medium) %></a>
      </div><!-- /.icon-overlay -->

      <figcaption class="bordered no-top-border">
        <div class="info item-info-height">

          <h4><%= link_to "#{user.name}", user_path(user) %></h4>
          <% unless current_user == user %>
            <%= link_to 'Send message', new_message_path(to: user.id), {remote: true, 'data-toggle' => 'modal', 'data-target' => '#modal-window', class: 'btn btn-default'} %>
          <% end %>
        </div><!-- /.info -->
      </figcaption>
    </figure>
  </li><!-- /.item -->
<% end %>
