<li class="item thumb interactive" id="user-<%= user.id %>">
  <figure>
    <div class="icon-overlay icn-link">
      <%= image_for_user user, :medium %>
    </div><!-- /.icon-overlay -->

    <figcaption class="bordered no-top-border">
      <div class="info item-info-height">

        <h4><%= link_to "#{user.name}", user_path(user) %></h4>
        <% unless current_user == user %>
          <%= link_to 'Send message', new_message_path(to: user.id), class: 'btn btn-small' %>
        <% end %>
      </div><!-- /.info -->
    </figcaption>
  </figure>
</li><!-- /.item -->
