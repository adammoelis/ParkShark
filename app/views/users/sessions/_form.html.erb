<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="modal-body">
    <%= render 'facebook_sign_in_button' %>
    <%= render 'google_sign_in_button' %>
    <p id="or-message">OR</p>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
    </div>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign in with email", class: "btn btn-default", style: "width:100%;" %>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default close-modal" data-dismiss="modal">Close</button>
  </div>
<% end %>
