<% content_for :page_title do %>Your Car Needs A Home | Find Affordable Off-Street Parking Near You<% end %>

<main>

<!-- ============================================================= MAIN ============================================================= -->

<!-- ============================================================= SECTION – HERO ============================================================= -->

<section id="hero">
	<div id="owl-main" class="owl-carousel height-lg owl-inner-nav owl-ui-lg">

		<div class="item" style="background-image: url(<%= image_path 'road.jpg' %>);">
			<div class="container">
				<div class="caption vertical-center text-center">
					<h1 class="fadeInDown-1 light-color">Welcome to ParkShark</h1>
					<p class="fadeInDown-2 light-color">Find cheap parking or earn cash by renting out driveway space</p>
					<div class="fadeInDown-3">
					</div><!-- /.fadeIn -->

				</div><!-- /.caption -->
			</div><!-- /.container -->
		</div><!-- /.item -->

		<div class="item" style="background-image: url(<%= image_path 'new_york2.jpg' %>);">
			<div class="container">
				<div class="caption vertical-center text-right">

					<h1 class="fadeInLeft-1 light-color">Find Spots <br>Around the World</h1>
					<p class="fadeInLeft-2 light-color">Find a cheap parking spot that fits your needs  <br> </p>
					<div class="fadeInLeft-3">
					</div><!-- /.fadeIn -->

				</div><!-- /.caption -->
			</div><!-- /.container -->
		</div><!-- /.item -->

		<div class="item" style="background-image: url(<%= image_path 'new_york.jpg' %>);">
			<div class="container">
				<div class="caption vertical-center text-left">

					<h1 class="fadeInRight-1 dark-bg light-color"><span>List <br>Your Spots</span></h1>
					<p class="fadeInRight-2 light-color">Earn some extra cash<br>Make use of your driveway</p>
					<div class="fadeInRight-3">
					</div><!-- /.fadeIn -->

				</div><!-- /.caption -->
			</div><!-- /.container -->
		</div><!-- /.item -->

	</div><!-- /.owl-carousel -->
</section>

<!-- ============================================================= SECTION – HERO : END ============================================================= -->

	<section id="who-we-are">
		<div class="container inner-top-sm inner-bottom-sm">

			<div class="row">
				<div class="col-md-8 col-sm-9 center-block text-center">
					<header>
						<h1>Fast. Easy. Affordable.</h1>
						<p>Find nearby parking at cheap prices. Listing a spot is simple</p>
					</header>
				</div><!-- /.col -->
			</div><!-- /.row -->

			<div class="row inner-top-sm">
				<div class="col-md-1">
					<div class="icon pull-right">
						<i class="icon-search icn"></i>
					</div><!-- /.icon -->
				</div><!-- /.col -->

				<div class="col-md-3 inner-bottom-xs" id="search">
					<h2>Find Parking Nearby</h2>
					<p class="text-small">Find available listings near you right now</p>
					<%= render 'layouts/find_me' %>
				</div><!-- /.col -->

				<div class="col-md-1">
					<div class="icon pull-right">
						<i class="icon-money icn"></i>
					</div><!-- /.icon -->
				</div><!-- /.col -->

				<div class="col-md-3 inner-bottom-xs">
					<h2>Get Paid</h2>
					<p class="text-small">Listing a spot is simple. Click below to get started and make some $$$</p>
					<%= link_to "List your parking spot", new_spot_path, class: "btn btn-large" %><br>
				</div><!-- /.col -->

				<div class="col-md-1">
					<div class="icon pull-right">
						<i class="icon-globe icn"></i>
					</div><!-- /.icon -->
				</div><!-- /.col -->

				<div class="col-md-3 inner-bottom-xs">
					<h2>Find a Spot Elsewhere</h2>
					<%= render 'search/search_location' %>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container -->
	</section>

	<!-- ============================================================= SECTION – LATEST WORKS ============================================================= -->

	<section id="latest-works" class="light-bg">
		<div class="container inner">

			<div class="row">
				<div class="col-md-8 col-sm-9 center-block text-center">
					<header>
						<h1>Check out the latest posts from other ParkSharks</h1>
						<p>Check out new spots</p>
					</header>
				</div><!-- /.col -->
			</div><!-- /.row -->

			<%= render "next_eight_spots" %>

		</div><!-- /.container -->
	</section>

	<!-- ============================================================= SECTION – LATEST WORKS : END ============================================================= -->

	<!-- ============================================================= MAIN : END ============================================================= -->

</main>
