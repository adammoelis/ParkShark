<% content_for :page_title do %>Conversation<% end %>

<main>
  <section>
    <div class="container inner-top-sm inner-bottom-sm">
      <div class="row">
        <div class="col-md-6 col-sm-9 center-block">
          <div class="panel panel-default">
            <div class="panel-heading"><h2><%= @conversation.subject %></h2></div>
            <div class="panel-body">
              <div class="messages">
                <% @conversation.receipts_for(current_user).each do |receipt| %>
                  <div class="media">
                    <% message = receipt.message %>
                    <div class="media-left">
                      <a href="<%= user_path(message.sender) %>"><%= image_for_user message.sender, :thumb, 'img-chat rounded', message.sender.name %></a>
                    </div>

                    <div class="media-body">
                      <h6 class="media-heading"><a href="<%= user_path(message.sender) %>"><%= message.sender.id == current_user.id ? 'You' : message.sender.name %></a>
                        (<%= time_ago_in_words(message.created_at) %> ago)</h6>
                      <%= message.body %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <%= form_tag reply_conversation_path(@conversation), method: :post, remote: true do %>
            <div class="form-group">
              <%= text_area_tag 'body', nil, cols: 3, class: 'form-control', placeholder: 'Type something...', required: true %>
            </div>
            <div class="form-group pull-right">
              <%= link_to "Back", :back, class: 'btn btn-default' %>
              <%= submit_tag "Send Message", class: 'btn btn-primary' %>
            </div>
          <% end %>

        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>
  </section>
</main>

<script type="text/javascript">
  $(document).ready(function() {
    $('form').on('submit', function(e) {
      // append reply immediately instead of waiting for ajax to process
      var message = $('textarea').val();
      $('.messages').append("<%= j render 'fake_reply' %>");
      $('.media-body').last().append(message);
      e.stopPropagation;

      // scroll to bottom of conversation on update
      $('.messages').animate({ scrollTop: $('.messages')[0].scrollHeight}, 1000);
    });

    // scroll to bottom of conversation on page_load
    $('.messages').animate({ scrollTop: $('.messages')[0].scrollHeight}, 0);

    // add shadow on scroll
    $('.messages').scroll(function() {
       var scroll = $('.messages').scrollTop();
       if (scroll > 0) {
         $('.panel-heading').addClass('panel-heading-shadow');
       } else {
         $('.panel-heading').removeClass('panel-heading-shadow');
       }
    });
  });
</script>
